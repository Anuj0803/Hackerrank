package practice;
import java.io.*;

import java.util.*;
public class Solution {

	public static void main(String []args)
	  {
		int a =1,b=1;
		System.out.println("enter a no.");
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		for(int i=2;i<=n;i++)
		{
			if(i%2==0)
			{
				a=a*2;
			}
			else
				b=b*3;
		}
		if(n%2!=0)
		{
			System.out.println(a);
		}
		else
			System.out.println(b);
	  }   
}

